<?xml version='1.0' encoding='utf-8'?>
<widget id="org.example.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>TrashTrade</name>
    <description>
        An application to manage recycling.
    </description>
    <author email="support@example.com" href="http://example.com">
        Your Company
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-camera" spec="^7.0.0" />

    <!-- Permissões para Android -->
    <platform name="android">
        <edit-config file="app/src/main/AndroidManifest.xml" mode="merge" target="/manifest/uses-permission">
            <uses-permission android:name="android.permission.CAMERA" />
            <uses-feature android:name="android.hardware.camera" android:required="true" />
            <uses-feature android:name="android.hardware.camera.autofocus" />
        </edit-config>
    </platform>

    <!-- Permissões para iOS -->
    <platform name="ios">
        <edit-config file="*-Info.plist" mode="merge" target="NSCameraUsageDescription">
            <string>Need camera access to take pictures</string>
        </edit-config>
    </platform>

    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </openshop>
</widget>
